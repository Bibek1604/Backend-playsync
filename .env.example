# Server Configuration
NODE_ENV=development
PORT=5000

# Database
MONGO_URI=mongodb://localhost:27017/playsync

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Admin Secret
ADMIN_SECRET=your-super-secret-key-2025

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Email Configuration (Gmail SMTP)
# IMPORTANT: Use Gmail App Password, not your regular Gmail password
# To generate an App Password:
# 1. Enable 2-Factor Authentication on your Google Account
# 2. Go to https://myaccount.google.com/apppasswords
# 3. Generate a new App Password for "Mail"
# 4. Copy the 16-character password and paste it below
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password-here
EMAIL_FROM_NAME=PlaySync

# Client Configuration
CLIENT_URL=http://localhost:3000

# Game Cleanup Cron Job
GAME_CLEANUP_CRON=*/5 * * * *
